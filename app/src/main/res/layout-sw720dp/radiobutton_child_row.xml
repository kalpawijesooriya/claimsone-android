<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/multilevel_LL_height"
    android:background="@drawable/pendingjobs_middle_row"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/childname"
        android:layout_width="@dimen/radiobuttonchild_childname_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:focusable="false"
        android:paddingLeft="@dimen/radiobuttonchild_childname_paddingLeft"
        android:textColor="@color/black"
        android:textSize="@dimen/radiobuttonchild_textSize" />

    <TextView
        android:id="@+id/rgb"
        android:layout_width="@dimen/radiobuttonchild_rgb_width"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:textSize="@dimen/radiobuttongroup_textSize" />

    <RadioButton
        android:id="@+id/radioButton1"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:button="@layout/radiobox_selector"
        android:clickable="false"
        android:focusable="false"
        android:gravity="center_vertical" >
    </RadioButton>

</LinearLayout>