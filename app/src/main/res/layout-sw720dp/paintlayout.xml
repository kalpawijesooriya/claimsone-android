<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:baselineAligned="false"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/frameLayoutCanvasWrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearLayoutCanvasWrapper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/paint_linearLayout5_marginTop"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnGreen"
                android:layout_width="@dimen/paint_button_width"
                android:layout_height="@dimen/paint_button_height"
                android:clickable="true"
                android:onClick="on_click_Green_button"
                android:width="@dimen/paint_button_androidwidth">
            </Button>

            <Button
                android:id="@+id/btnRed"
                android:layout_width="@dimen/paint_button_width"
                android:layout_height="@dimen/paint_button_height"
                android:layout_marginTop="@dimen/paint_button_marginTop"
                android:clickable="true"
                android:onClick="on_click_Red_button"
                android:width="@dimen/paint_button_androidwidth" >
            </Button>

            <Button
                android:id="@+id/btnEraser"
                android:layout_width="@dimen/paint_button_width"
                android:layout_height="@dimen/paint_button_height"
                android:layout_marginTop="@dimen/paint_button_marginTop"
                android:clickable="true"
                android:onClick="on_click_Eraser_button"
                android:width="@dimen/paint_button_androidwidth" >
            </Button>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="@dimen/header_width"
        android:layout_height="@dimen/bottom_button_bar_height"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/paint_bottombar_marginTop"
        android:background="@drawable/bottom_button_bar" >

        <Button
            android:id="@+id/button1"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_marginLeft="@dimen/buttons_margin"
            android:layout_marginTop="@dimen/buttons_margin"
            android:background="@drawable/back_button_xml"
            android:clickable="true"
            android:onClick="on_click_back_button" >
        </Button>

        <Button
            android:id="@+id/btnSave"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_marginLeft="@dimen/button2_marginLeft"
            android:layout_marginTop="@dimen/buttons_margin"
            android:background="@drawable/save_button_xml"
            android:clickable="true"
            android:onClick="on_click_save_button" >
        </Button>
    </LinearLayout>

</LinearLayout>