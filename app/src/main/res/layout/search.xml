<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:clickable="true"
    android:onClick="onClick_keyboardClose"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:layout_margin="10dp"
        android:background="@drawable/edittext_border"
        android:onClick="onClick_keyboardClose"
        android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/linearLayout_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:layout_gravity="center"
        android:background="@drawable/search_background1"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_body"
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_background2_height"
        android:layout_gravity="center"
        android:background="@drawable/search_background3new"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/searchbyvehiclenotext"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="@dimen/search_editText_height"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/search_editText_marginTop"
            android:background="#00FFFFFF"
            android:digits="@string/alphanumeric_dash"
            android:inputType="textCapCharacters"
            android:lines="1"
            android:maxLength="50"
            android:maxLines="1"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:textSize="@dimen/editText_textSize" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_button_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_button_bar_height"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/search_bottom_button_bar_marginTop"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/button_height"
            android:layout_marginLeft="@dimen/buttons_margin"
            android:layout_marginTop="@dimen/buttons_margin"
            android:background="@drawable/back_button_xml"
            android:clickable="true"
            android:onClick="on_click_back_button" >
        </Button>

        <Button
            android:id="@+id/searh_search_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/button_height"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="@dimen/buttons_margin"
            android:background="@drawable/search_button_xml"
            android:clickable="true"
            android:onClick="on_click_search_button" >
        </Button>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>