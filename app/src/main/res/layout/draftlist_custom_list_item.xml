<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listlayoutview"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_select_only_row_xml"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/jobvehicleLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="5dip"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/jobLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/jobnoi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Job No:"
                android:textColor="@color/black"
                android:textSize="8pt" />

            <TextView
                android:id="@+id/jobno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:textColor="@color/black"
                android:textSize="8pt" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/vehicleLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/vehiclenoi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="Vehicle No:"
                android:textColor="@color/black"
                android:textSize="8pt" />

            <TextView
                android:id="@+id/vehicleno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:textColor="@color/black"
                android:textSize="8pt" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/visitdateLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dip"
        android:layout_marginLeft="5dip"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/visitLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/visittypetexti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Visit Type:"
                android:textSize="7pt" />

            <TextView
                android:id="@+id/visittypetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:textSize="7pt" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dateLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/datei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Created On:"
                android:textSize="7pt" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="3dip"
                android:layout_marginRight="5dip"
                android:gravity="right"

                android:textSize="7pt" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>